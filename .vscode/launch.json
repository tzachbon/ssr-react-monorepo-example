{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Attach to Chrome",
      "port": 9222,
      "request": "launch",
      "type": "chrome",
      "webRoot": "${workspaceFolder}/packages/app/dist/umd"
    },
    {
      "type": "pwa-node",
      "request": "launch",
      "name": "Mocha Current",
      "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
      "args": ["--timeout", "999999", "packages/**/dist/test/**/${fileBasenameNoExtension}.js"],
      "runtimeArgs": ["--enable-source-maps"],
      "preLaunchTask": "npm: build:all",
      "internalConsoleOptions": "openOnSessionStart",
      "skipFiles": ["<node_internals>/**"],
      "resolveSourceMapLocations": ["${workspaceFolder}/**", "!**/node_modules/**"],
      "env": {
        "FILE": "${file}",
        "ENDPOINT_URL": "http://localhost:9222/"
      }
    }
  ],
  "compounds": [
    {
      "name": "Mocha and browser debugger",
      "configurations": ["Attach to Chrome", "Mocha Current"],
      "stopAll": true
    }
  ]
}

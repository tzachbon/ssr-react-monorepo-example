{
  "name": "ssr-react-example",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "packageManager": "npm@8.5.5",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "clean": "rimraf ./packages/*/dist **/.turbo, **/.cache",
    "dev": "turbo run dev //#dev:all --parallel",
    "dev:all": "npm run build:all -- --watch --preserveWatchOutput",
    "build": "turbo run build",
    "build:all": "tsc --build",
    "upgrade:dependencies": "pleb upgrade",
    "lint": "turbo run lint",
    "lint:all": "eslint .",
    "test": "turbo run test",
    "test:all": "mocha \"packages/**/dist/test/**/*.test.js\" --parallel"
  },
  "keywords": [
    "ssr",
    "react",
    "react-ssr",
    "server-side-rendering",
    "webpack",
    "typescript",
    "nodejs",
    "monorepo"
  ],
  "author": {
    "email": "tzachbonfil@gmail.com",
    "name": "tzachbon",
    "url": "https://github.com/tzachbon"
  },
  "engines": {
    "node": ">=18",
    "npm": ">=8"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/express": "^4.17.14",
    "@types/mocha": "^10.0.0",
    "@types/node": "^18.7.21",
    "@types/react": "^18.0.21",
    "@types/react-dom": "^18.0.6",
    "@typescript-eslint/eslint-plugin": "^5.38.0",
    "create-listening-server": "^1.0.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.24.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-no-only-tests": "^3.0.0",
    "eslint-plugin-react": "^7.31.8",
    "eslint-plugin-react-hooks": "^4.6.0",
    "expect": "^29.0.3",
    "html-webpack-plugin": "^5.5.0",
    "jest-util": "^29.0.3",
    "mocha": "^10.0.0",
    "nodemon": "^2.0.20",
    "npm-run-all": "^4.1.5",
    "open": "^8.4.0",
    "playwright": "^1.26.0",
    "pleb": "^5.1.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rimraf": "^3.0.2",
    "source-map-loader": "^4.0.0",
    "turbo": "^1.5.3",
    "typescript": "^4.8.3",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0",
    "webpack-dev-server": "^4.11.1"
  }
}

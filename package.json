{
  "name": "ssr-react-example",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "clean": "rimraf ./packages/*/dist",
    "build": "tsc --build",
    "build:all": "npm run build && npm run build:app",
    "lint": "eslint .",
    "pretest": "npm run build:all",
    "test": "mocha \"packages/**/dist/test/**/*.test.js\" --parallel",
    "build:app": "npm run build -w app",
    "prestart:server": "npm run build:all",
    "prestart:app": "npm run build",
    "start:server": "npm start -w server",
    "start:app": "npm start -w app"
  },
  "keywords": [
    "ssr",
    "react",
    "react-ssr",
    "server-side-rendering",
    "webpack",
    "typescript",
    "nodejs",
    "monorepo"
  ],
  "author": {
    "email": "tzachbonfil@gmail.com",
    "name": "tzachbon",
    "url": "https://github.com/tzachbon"
  },
  "engines": {
    "node": ">=16",
    "npm": ">=8"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/expect": "^24.3.0",
    "@types/express": "^4.17.13",
    "@types/mocha": "^9.1.0",
    "@types/node": "^17.0.23",
    "@types/react": "^17.0.43",
    "@types/react-dom": "^17.0.14",
    "create-listening-server": "^1.0.0",
    "eslint": "^8.12.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-no-only-tests": "^2.6.0",
    "eslint-plugin-react": "^7.29.4",
    "eslint-plugin-react-hooks": "^4.4.0",
    "expect": "^27.5.1",
    "html-webpack-plugin": "^5.5.0",
    "mocha": "^9.2.2",
    "playwright": "^1.20.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "rimraf": "^3.0.2",
    "source-map-loader": "^3.0.1",
    "ts-loader": "^9.2.8",
    "typescript": "^4.6.3",
    "webpack": "^5.70.0",
    "webpack-cli": "^4.9.2",
    "webpack-dev-server": "^4.7.4"
  }

{
  "name": "ssr-react-example",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run build -- -w --preserveWatchOutput",
    "dev:app": "run-p -dev start:app",
    "dev:server": "run-p dev dev:server app:bundle:watch",
    "clean": "rimraf ./packages/*/dist",
    "build": "tsc --build",
    "build:all": "run-p build build:app",
    "lint": "eslint .",
    "pretest": "npm run build:all",
    "test": "mocha \"packages/**/dist/test/**/*.test.js\" --parallel",
    "build:app": "npm run build -w app",
    "prestart:server": "npm run build:all",
    "prestart:app": "npm run build",
    "start:server": "npm start -w server",
    "start:app": "npm start -w app",
    "__dev__internals__": ":",
    "dev:app:bundle": "npm run bundle:dev -w app -- --watch",
    "dev:server:watch": "npm run dev -w server"
  },
  "keywords": [
    "ssr",
    "react",
    "react-ssr",
    "server-side-rendering",
    "webpack",
    "typescript",
    "nodejs",
    "monorepo"
  ],
  "author": {
    "email": "tzachbonfil@gmail.com",
    "name": "tzachbon",
    "url": "https://github.com/tzachbon"
  },
  "engines": {
    "node": ">=16",
    "npm": ">=8"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/mocha": "^9.1.0",
    "@types/node": "^17.0.25",
    "@types/react": "^18.0.5",
    "@types/react-dom": "^18.0.1",
    "create-listening-server": "^1.0.0",
    "eslint": "^8.13.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-no-only-tests": "^2.6.0",
    "eslint-plugin-react": "^7.29.4",
    "eslint-plugin-react-hooks": "^4.4.0",
    "expect": "^27.5.1",
    "html-webpack-plugin": "^5.5.0",
    "mocha": "^9.2.2",
    "nodemon": "^2.0.15",
    "npm-run-all": "^4.1.5",
    "playwright": "^1.21.1",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "rimraf": "^3.0.2",
    "source-map-loader": "^3.0.1",
    "ts-loader": "^9.2.8",
    "typescript": "^4.6.3",
    "webpack": "^5.72.0",
    "webpack-cli": "^4.9.2",
    "webpack-dev-server": "^4.8.1"
  }
}
